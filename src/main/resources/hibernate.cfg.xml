<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
<session-factory>
    <property name="hibernate.connection.driver_class">org.h2.Driver</property>
    <property name="hibernate.connection.url">jdbc:h2:tcp://localhost/~/kiev/kievdb</property>
    <property name="current_session_context_class">thread</property>
    <property name="hibernate.connection.username">sa</property>
    <property name="hibernate.connection.password"></property>
    <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
    <property name="show_sql">true</property>
    <property name="hbm2ddl.auto">create</property>
    <mapping class="com.chadik.kiev.model.Customer" />
    <mapping class="com.chadik.kiev.model.Invoice" />
    <mapping class="com.chadik.kiev.model.Request" />
    <mapping class="com.chadik.kiev.model.Product" />
    <mapping class="com.chadik.kiev.model.Trader" />
</session-factory>
</hibernate-configuration>